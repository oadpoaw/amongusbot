{
    "compilerOptions": {
        "strict": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es2019",
        "lib": [
            "esnext",
        ],
        "sourceMap": false,
        "inlineSourceMap": true,
        "inlineSources": true,
        "sourceRoot": "/",
        "outDir": "dist",
        "declaration": false,
        "removeComments": false,
        "alwaysStrict": true,
        "allowSyntheticDefaultImports": true,
        "pretty": true,
        "noEmitOnError": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
}
